{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    // "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "types"
    ],
    "incremental": true
  },
  "include": [
    "src"
  ],
  "files": [
    "noctem.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
